<Window x:Class="HotelSystem.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelSystem"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:inf="clr-namespace:HotelSystem.Infrastructure;assembly=HotelSystem.Infrastructure"
        mc:Ignorable="d"
        Style="{StaticResource MainWindowStyle}"
        Title="Shell">
    <Grid>
      <DockPanel>
         <StackPanel prism:RegionManager.RegionName="{x:Static inf:RegionNames.NavigationRegion}"/>
         <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.ReservationsRegion}"/>
      </DockPanel>
   </Grid>
</Window>
