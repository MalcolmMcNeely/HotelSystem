<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HotelSystem.Infrastructure.Styles">

    <!-- Main Window Brushes -->
    <SolidColorBrush x:Key="brushPrimaryWindowForegroundColour" Color="#ecf0f1"/>
    <SolidColorBrush x:Key="brushPrimaryWindowBackgroundColour" Color="#424342"/>
    <SolidColorBrush x:Key="brushWindowDefaultButtonColour" Color="#424342"/>
    <SolidColorBrush x:Key="brushWindowHoverButtonColour" Color="#535453"/>
    <SolidColorBrush x:Key="brushWindowPressedButtonColour" Color="#646564"/>
    <SolidColorBrush x:Key="brushWindowExitHoverButtonColour" Color="#d7263d"/>
    <SolidColorBrush x:Key="brushWindowExitPressedButtonColour" Color="#de4d60"/>
    
    <!--Overlay brushes-->
    <SolidColorBrush x:Key="brushOverlayShadowColour" Color="Black" Opacity="0.2"/>

    <!--General brushes-->
    <SolidColorBrush x:Key="brushPrimaryBackgroundColour" Color="#30313A"/>
    <SolidColorBrush x:Key="brushPrimaryForegroundColour" Color="#E9E0E0"/>
    <SolidColorBrush x:Key="brushPrimaryHeaderColour" Color="#0D1B1E"/>
    <SolidColorBrush x:Key="brushSecondaryHeaderColour" Color="#040926"/>
    <SolidColorBrush x:Key="brushTertiaryHeaderColour" Color="#251351"/>
    
</ResourceDictionary>