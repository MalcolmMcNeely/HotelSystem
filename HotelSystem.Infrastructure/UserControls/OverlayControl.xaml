<UserControl x:Class="HotelSystem.Infrastructure.UserControls.OverlayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelSystem.Infrastructure.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">
    <Grid Panel.ZIndex="1000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MenuColumn" Width="{Binding MenuWidth}"/>
            <ColumnDefinition x:Name="ShadowColumn" Width="0"/>
        </Grid.ColumnDefinitions>
        <ContentPresenter x:Name="MenuPresenter" 
                          Grid.Column="0" 
                          Content="{Binding MenuContent, ElementName=ControlRoot}"/>
        <Border Grid.Column="1" 
                Background="{DynamicResource brushOverlayShadowColour}" 
                MouseDown="ShadowMouseDown"/>
    </Grid>
</UserControl>
